}
class Table{
    tableId : int
    status : TableStatus
    maxCapacity : int
    locationIdentifier : int
    addReservation() : bool
}
class Reservation{
    reservationId : int
    timeOfReservation : datetime
    peopleCount : int
    status : ReservationStatus
